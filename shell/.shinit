#!/bin/sh

# hist√≥rico
HISTFILE="${XDG_CACHE_HOME}/histifle"
HISTSIZE=5000
HISTCONTROL='ignoredups'

# vi mode
set -o vi

# aliases
. "${XDG_CONFIG_HOME}/shell/aliases"

# prompt
CURDIR='$(pwd | sed "s|/home/`id -un`|~|")'

if [ "$0" = 'dash' ]; then
	PS1="[ $(id -un):${CURDIR} ]\$ "
	unset CURDIR
else
	vermelho='[1;31m'
	amarelo_cinza='[1;33m'
	amarelo_claro='[1;93m'
	azul='[1;94m'
	resetar='[0m'
	if [ $(id -u) = 0 ]; then
		# root
		PS1="${vermelho}[ $(hostname):${azul}${CURDIR}${vermelho} ]#${resetar} "
	else
		# user
		PS1="${vermelho}[ ${amarelo_cinza}$(id -un):${amarelo_claro}${CURDIR} ${vermelho}]${amarelo_cinza}\$${resetar} "
	fi
	unset CURDIR vermelho amarelo_cinza amarelo_claro azul resetar
fi

export PS1
