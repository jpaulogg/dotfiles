#!/bin/sh

# prompt
if [ ! $0 = 'dash' ]; then
	vermelho='[1;31m'
	amarelo_cinza='[1;33m'
	amarelo_claro='[1;93m'
	azul='[1;94m'
	sem_cor='[0m'
else
	vermelho='';  amarelo_cinza=''; amarelo_claro=''; azul=''; sem_cor=''
fi
CURDIR='$(pwd | sed "s|/home/"$(id -un)"|~|")'

if [ $(id -un) = 'root' ]; then
	PS1=" ${vermelho}$(hostname):${azul}${CURDIR}${vermelho}#${sem_cor} "
else
	PS1="${vermelho}[ ${amarelo_cinza}$(id -un):${amarelo_claro}${CURDIR} ${vermelho}]${amarelo_cinza}\$${sem_cor} "
fi

export PS1
unset vermelho amarelo_cinza amarelo_claro azul CURDIR

# vi mode
set -o vi

# alias
. "${XDG_CONFIG_HOME}/shell/aliasrc"
